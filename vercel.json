{
    "version": 2,
    "name": "cyber-os",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "installCommand": "npm install",
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/dist/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1",
            "continue": true
        },
        {
            "src": "/(.*)",
            "status": 404,
            "dest": "frontend/dist/index.html"
        }
    ]
}